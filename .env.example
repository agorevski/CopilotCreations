# Discord Bot Token - Get this from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here

# GitHub Integration (Optional) - Enable automatic repository creation
# Set GITHUB_ENABLED=true to enable, false to disable
GITHUB_ENABLED=false

# GitHub Personal Access Token - Get this from https://github.com/settings/tokens
# Required scopes: repo (Full control of private repositories)
GITHUB_TOKEN=your_github_token_here

# GitHub Username - Your GitHub username for repository creation
GITHUB_USERNAME=your_github_username_here

# GitHub Repository Visibility (Optional)
# Set to true for private repositories, false for public (default: false = public)
GITHUB_REPO_PRIVATE=false

# Cleanup Configuration (Optional)
# Delete local project folder after successful GitHub push (default: true)
CLEANUP_AFTER_PUSH=true

# Timeout Configuration (Optional)
# Maximum time in minutes for project creation before timeout (default: 30)
TIMEOUT_MINUTES=120

# Parallelism Configuration (Optional)
# Maximum number of parallel project creation requests (default: 2)
MAX_PARALLEL_REQUESTS=2
